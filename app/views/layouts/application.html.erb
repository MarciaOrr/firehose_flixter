<!DOCTYPE html>
<html>
<head>
  <title>Flixter</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="//vjs.zencdn.net/5.11.7/video-js.css" rel="stylesheet">
  <script src="//vjs.zencdn.net/5.11.7/video.js"></script>
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
</head>

<body>




<nav class="navbar navbar-toggleable-md navbar-light">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggler navbar-toggler-right" data-toggle="collapse" data-target="#navbarToggleCollapse"
                    aria-controls="navbarToggleCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'Flixter', root_url, class: 'navbar-brand' %>
    </div>   <!-- navbar-header -->

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbarToggleCollapse">
      <ul class="navbar-nav mr-auto mt-2 mt-md-0">
        <li>
          <%= link_to 'See Course Details', courses_path, class: 'nav-link' %>
        </li>
      </ul>

      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to 'Dashboard', dashboard_path, class: 'nav-link' %></li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, class: 'nav-link', method: :delete %></li>
        <% else %>
          <li><%= link_to 'LOG IN', new_user_session_path, class: 'nav-link' %></li>
          <li><%= link_to 'SIGN UP', new_user_registration_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>   <!-- /.navbar-collapse -->

    <div class='navbar-blurb'>
      Centers for Spiritual Living Online Education is dedicated to providing connection through high quality virtual education, 
      grounded in Science of Mind Principles and Practices.
    </div>
  </div>   <!-- /.container-fluid -->
</nav>





  <div class='content-container'>
   <div class='container-fluid'>
    <% if notice.present? %>
      <p class='alert alert-info'><%= notice %></p>
    <% end %>
    <% if alert.present? %>
     <p class='alert alert-danger'><%= alert %></p>
    <% end %>

    <%= yield %>
  </div>   <!-- div container wrapping the content -->
</div>   <!-- div flex-content-container -->


<div id='footer'>
    <div class='row'>
      <div class='col-sm footer-column'>
        <b>Teachers</b>
        <br />
        <%= link_to 'Create Course', new_instructor_course_path %>
        <br />
        <%= link_to 'View Dashboard', dashboard_path %>
      </div>
      <div class='col-sm footer-column'>
        <b>Centers for Spiritual Living</b>
        <br />
        <a href='http://csl.org/onlineclasses/'>csl.org/onlineclasses</a>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      <br />
      </div>  
      <div class='col-sm footer-column'>
        <b>The Firehose Project</b>
        <br />
        <a href='http://thefirehoseproject.com'>Learn to Code</a>
        <br />
        Cambridge MA, 02113
      </div>
      <div class='col-sm social'>
        <b>Social</b>
        <br />
        <%= link_to 'http://github.com/marciaorr' do %>
          <%= image_tag 'github.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://www.linkedin.com/in/marcia-orr-a9774610' do %>
          <%= image_tag 'linkedin.png', class: 'social-button' %>
        <% end %>
        <%= link_to 'https://medium.com/@orrmar20620' do %>
          <%= image_tag 'medium.png', class: 'social-button' %>
        <% end %>          
      </div>
      <br /><br />
    </div>
</div>

</div>   <!-- div id wrap -->

</body>
</html>
