<br />
<div class='booyah-box col-xs-12 col-xs-offset-1 col-sm-10 col-sm-offset-1'>
  <h1>Create New Course</h1>

  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :cost %>
    <%= f.input :image %>
    <br />
    <%= f.submit "Create", class: 'btn btn-primary'  %>
    <br />
  <% end %>
</div>