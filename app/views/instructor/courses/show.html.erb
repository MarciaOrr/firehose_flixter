<div class='booyah-box col-xs-12 col-xs-offset-1 col-sm-10 col-sm-offset-1'>
  <h1><%= @course.title %></h1>
  <br />
  <%= link_to 'Preview as Student...', course_path(@course), class: 'btn btn-warning pull-right' %>
  <br class='clear' />

  <div class='text-center'>
    <%= link_to 'Add a new section ...', new_instructor_course_section_path(@course), class: 'btn btn-primary btn-lg' %>
    <br />
    <br class='clear' />
  </div>

  <ul>
    <% @sections_sorted = @course.sections.order('title ASC') %>
    <% @sections_sorted.each_with_index do |section, section_index| %>
      <li>
        <%= section.title %>
        <%= link_to "New Lesson", new_instructor_section_lesson_path(section), class: 'pull-right btn btn-primary btn-xs' %>
        <ul>
          <% @lessons_sorted = section.lessons.order('title ASC') %>
          <% @lessons_sorted.each_with_index do |lesson, lesson_index| %>
            <li>
              <b><%= lesson.title %></b> - 
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>

  <p><%= safe_join(@course.description.split("\r\n"), "<br />".html_safe) %>
  </p>

</div>