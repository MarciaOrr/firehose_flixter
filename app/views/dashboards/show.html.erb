<br />

<div class='booyah-box col-xs-12 col-sm-10 col-sm-offset-1'>
  <h1><u>Enrolled Courses</u></h1>
  <% current_user.enrolled_courses.each do |course| %>

    <h3 class='text-center'>
      <%= link_to course.title, course_path(course) %>
    </h3>

    <div class='col-xs-12'>
      <div class='col-xs-4'>
        <img src='<%= course.image %>' class='img-responsive' alt='course image' style='width: 260px'>
      </div>
      <div class='col-xs-12 col-sm-6'>
        <%= course.description %>
      </div>
      <div class='col-xs-12 col-sm-2 text-center'>
        <%= link_to 'More Info...', course_path(course), class: 'btn btn-primary' %>
      </div>
    </div>
    <hr class='col-xs-8 col-xs-offset-2' style='color: brown'>
    <br class='clear' />
  <% end %>

  <h1><u>Instructor Courses</u></h1>
  <% current_user.courses.each do |course| %>

    <h3 class='text-center'>
      <%= link_to course.title, course_path(course) %>
    </h3>

    <div class='col-xs-12'>
      <div class='col-xs-4'>
        <img src='<%= course.image %>' class='img-responsive' alt='course image' style='width: 260px'>
      </div>
      <div class='col-xs-12 col-sm-6'>
        <%= course.description %>
      </div>
      <div class='col-xs-12 col-sm-2 text-center'>
        <%= link_to 'More Info...', course_path(course), class: 'btn btn-primary' %>
      </div>
    </div>
    <hr class='col-xs-8 col-xs-offset-2'>
    <br class='clear' />
  <% end %>

</div>