<br />

<div class='booyah-box col-xs-12 col-sm-10 col-sm-offset-1'>

  <h1>I am TEACHING <%= current_user.courses.count %> Courses</h1>
  <br />
  <% current_user.courses.each do |course| %>
    <div class='col-xs-12'>
      <div class='col-xs-2'>
        <img src='<%= course.image %>' class='img-responsive' alt='course image' style='width: 100%'>
      </div>
      <div class='col-xs-8 text-center'>
        <h2>
          <%= link_to course.title, course_path(course) %>
        </h2>
      </div>
      <div class='col-xs-2'>
        <%= link_to 'More Info', course_path(course), class: 'btn btn-primary' %>
      </div>
      <br />
      <div class='col-xs-12'>
        <%= course.description %>
      </div>      
    </div>
    <hr class='col-xs-10 col-xs-offset-1'>
    <br class='clear' />
  <% end %>

  <br /><br />
  <h1>I am ENROLLED in <%= current_user.enrolled_courses.count %> Courses</h1>
  <br />
  <% current_user.enrolled_courses.each do |course| %>
    <div class='col-xs-12'>
      <div class='col-xs-2'>
        <img src='<%= course.image %>' class='img-responsive' alt='course image' style='width: 100%'>
      </div>
      <div class='col-xs-8 text-center'>
        <h2>
          <%= link_to course.title, course_path(course) %>
        </h2>
      </div>
      <div class='col-xs-2'>
        <%= link_to 'More Info', course_path(course), class: 'btn btn-primary' %>
      </div>
      <br />
      <div class='col-xs-12'>
        <%= course.description %>
      </div>      
    </div>
    <hr class='col-xs-10 col-xs-offset-1'>
    <br class='clear' />
  <% end %>

</div>