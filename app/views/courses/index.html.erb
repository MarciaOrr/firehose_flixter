<div class='booyah-box col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1'>
  <h1 class='text-center'>Learn something today</h1>
  <% @courses.each do |course| %>
    <h2 class='text-center'><%= course.title %></h2>
    <div class='col-sm-8 col-xs-12'>
      <%= safe_join(course.description.split("\r\n"), "<br />".html_safe) %>
    </div>
    <div class='col-sm-4 col-xs-12 text-center'>
      <%= link_to 'Button', '#', class: 'btn btn-primary btn-large' %>
    </div>
    <div class='clear'></div>
  <% end %>
</div>